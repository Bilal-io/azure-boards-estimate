{
    "manifestVersion": 1,
    "id": "estimate",
    "version": "0.0.10",
    "name": "Estimate",
    "description": "Planning Poker in Azure Boards.",
    "publisher": "cschleiden",
    "scopes": [
        "vso.project",
        "vso.work",
        "vso.work_write"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "demands": [
        "api-version/5.0"
    ],
    "galleryFlags": [
        "Preview"
    ],
    "tags": [
        "Planning Poker",
        "Estimate"
    ],
    "icons": {
        "default": "marketplace/icon-light.png",
        "branding": "marketplace/icon-light.png"
    },
    "content": {
        "details": {
            "path": "marketplace/overview.md"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cschleiden/azure-boards-estimate"
    },
    "links": {
        "support": {
            "url": "mailto:christopher.schleiden@microsoft.com"
        }
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "categories": [
        "Azure Boards"
    ],
    "files": [
        {
            "path": "marketplace",
            "addressable": true
        },
        {
            "path": "build",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "estimate-2",
            "type": "ms.vss-web.feature",
            "description": "Use the Estimate 2 preview",
            "targets": [
                "ms.vss-web.managed-features",
                "ms.vss-web.managed-features-onprem"
            ],
            "properties": {
                "name": "Estimate 2",
                "userConfigurable": false,
                "hostConfigurable": true
            }
        },
        {
            "id": "estimate-hub",
            "type": "ms.vss-web.hub",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Estimate",
                "order": 100,
                "uri": "index.html",
                "icon": {
                    "light": "marketplace/icon-light.png",
                    "dark": "marketplace/icon-dark.png"
                }
            },
            "constraints": [
                {
                    "name": "Feature",
                    "properties": {
                        "featureId": "cschleiden.estimate.estimate-2"
                    }
                }
            ]
        },
        {
            "id": "Estimate.Main",
            "type": "ms.vss-web.hub",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Estimate",
                "order": 99,
                "uri": "legacy/hub.html"
            },
            "constraints": [
                {
                    "name": "Feature",
                    "properties": {
                        "featureId": "cschleiden.estimate.estimate-2"
                    },
                    "inverse": true
                }
            ]
        },
        {
            "id": "Estimate.WorkItems",
            "type": "ms.vss-web.action",
            "description": "Shows the target properties for menu actions for work items",
            "targets": [
                "ms.vss-work-web.backlog-item-menu"
            ],
            "properties": {
                "text": "Estimate work item(s)",
                "title": "Start estimation session",
                "group": "actions",
                "uri": "legacy/index.html"
            },
            "constraints": [
                {
                    "name": "Feature",
                    "properties": {
                        "featureId": "cschleiden.estimate.estimate-2"
                    },
                    "inverse": true
                }
            ]
        }
    ]
}